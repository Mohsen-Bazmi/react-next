// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  name      String   @id
  email     String   @unique
  updatedAt DateTime @default(now()) @updatedAt
}

///A container for reservations that are made together (a premature optimization ðŸ˜‰).
model Reservations {
  id        String          @id
  updatedAt DateTime        @default(now()) @updatedAt
  firstName String
  lastName  String
  startDate DateTime
  startHour Int
  endDate   DateTime
  endHour   Int
  hours     ReservedHours[]
}

model ReservedHours {
  id   String   @id
  hour Int
  date DateTime

  reservation   Reservations @relation(fields: [reservationId], references: [id])
  reservationId String
  firstName     String
  lastName      String

  @@index([date])
}
